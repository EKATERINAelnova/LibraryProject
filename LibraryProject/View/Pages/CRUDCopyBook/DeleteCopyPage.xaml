<Page x:Class="LibraryProject.View.Pages.CRUDCopyBook.DeleteCopyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DeleteCopyPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Pages/аунтификация.png"/>
        </Grid.Background>
        <Border Margin="20" BorderBrush="#73937E" BorderThickness="2"  Background="#FDE5D3" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
            <StackPanel Margin="20">

                <TextBlock Text="Удаление экземпляра" HorizontalAlignment="Center"  Style="{StaticResource HText}" 
                       FontSize="22" Margin="0 0 0 20" />

                <TextBlock  Style="{StaticResource BaseText}" HorizontalAlignment="Center" x:Name="InfoText"
                       Margin="0 0 0 20" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Удалить" Background="Tomato" Foreground="White"
                        Click="Delete_Click"
                        Width="100" Margin="10 0" Style="{StaticResource NiceRoundedButton}"/>

                    <Button Content="Отмена" Width="100"
                        Click="Cancel_Click" Background="Gray" Margin="10 0" Style="{StaticResource NiceRoundedButton}"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Page>
