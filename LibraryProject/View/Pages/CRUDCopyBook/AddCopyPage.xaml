<Page x:Class="LibraryProject.View.Pages.CRUDCopyBook.AddCopyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryProject.View.Pages.CRUDCopyBook"
      mc:Ignorable="d" 
      Title="Добавление экземпляра">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Pages/аунтификация.png"/>
        </Grid.Background>
        <Border Margin="20" BorderBrush="#73937E" BorderThickness="2"  Background="#FDE5D3" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
            <StackPanel Margin="20">
                <TextBlock Style="{StaticResource HText}" Text="Добавление экземпляра" />

                <TextBlock Style="{StaticResource BaseText}" Text="Издательство" />
                <ComboBox x:Name="PublisherCombo" Margin="0 5"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Раздел" />
                <ComboBox x:Name="SectionCombo" Margin="0 5"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Год издания" />
                <TextBox Style="{StaticResource FlatTextBoxStyle}" x:Name="YearText" Margin="0 5"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Статус" />
                <ComboBox x:Name="StatusCombo" Margin="0 5"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Шкаф" />
                <TextBox Style="{StaticResource FlatTextBoxStyle}" x:Name="ClosetText" Margin="0 5"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Полка" />
                <TextBox Style="{StaticResource FlatTextBoxStyle}" x:Name="ShelfText" Margin="0 5"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Место" />
                <TextBox Style="{StaticResource FlatTextBoxStyle}" x:Name="PlaceText" Margin="0 5"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Кол-во страниц" />
                <TextBox Style="{StaticResource FlatTextBoxStyle}" x:Name="NumOfPages" Margin="0 5"/>

                <Button Content="Добавить экземпляр"
                    Margin="0 15"
                    Click="AddCopy_Click" Style="{StaticResource NiceRoundedButton}"/>
                <Button Content="Назад"
                Margin="0 0 0 15"
                Click="Back_Click" Background="Gray" Style="{StaticResource NiceRoundedButton}"/>      
            </StackPanel>
        </Border>
    </Grid>
</Page>
