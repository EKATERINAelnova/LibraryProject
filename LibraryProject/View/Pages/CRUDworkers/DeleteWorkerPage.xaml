<Page x:Class="LibraryProject.View.Pages.CRUDworkers.DeleteWorkerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryProject.View.Pages.CRUDworkers"
      mc:Ignorable="d" 
      Title="DeleteWorkerPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Pages/аунтификация.png"/>
        </Grid.Background>
        <Border Margin="20" BorderBrush="#73937E" BorderThickness="2"  Background="#FDE5D3" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
            <StackPanel Margin="20">
                <TextBlock Style="{StaticResource HText}"  Text="Удаление работника" HorizontalAlignment="Center"
                   FontSize="22" Margin="0 0 0 20" />

                <TextBlock Style="{StaticResource BaseText}" HorizontalAlignment="Center" x:Name="InfoText"
                   FontSize="16" Margin="0 0 0 20" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Удалить" Background="Tomato" Foreground="White"
                    Click="Delete_Click"
                    Width="100" Margin="10 0" Style="{StaticResource NiceRoundedButton}"/>

                    <Button Content="Отмена" Width="100"
                    Click="Cancel_Click" Background="Gray" Margin="10 0" Style="{StaticResource NiceRoundedButton}"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Page>
