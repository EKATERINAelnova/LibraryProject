<Page x:Class="LibraryProject.View.Pages.AllRequestsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryProject.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Запросы">

    <Grid Margin="10" Background="#FDE5D3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтр -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8">
            <TextBox x:Name="SearchBox" Width="250"/>
            <Button Content="Найти" Click="SearchButton_Click" Style="{StaticResource NoHighlightButton}"  Background="#824D53" Foreground="#FDE5D3" BorderBrush="#694244"/>
            <Button Content="Сброс" Click="ResetButton_Click" Margin="0,0,200,0" Style="{StaticResource NoHighlightButton}" Background="#FDE5D3" Foreground="#824D53" BorderBrush="#694244"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="100,0,0,0" Width="100" Background="Gray" Style="{StaticResource NiceRoundedButton}"/>
        </StackPanel>

        <!-- DataGrid книг -->
        <DataGrid x:Name="BooksDataGrid"
          Grid.Row="1"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          SelectionMode="Single" Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding UserName}" Width="*"/>
                <DataGridTextColumn Header="Название" Binding="{Binding BookTitle}" Width="*"/>
                <DataGridTextColumn Header="Авторы" Binding="{Binding Authors}" Width="200"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Дата запроса" Binding="{Binding RequestDate}" Width="150"/>
                <DataGridTemplateColumn x:Name="Reserve" Header="Действие">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Рассмотреть" Click="ReqToLoan_Click" Style="{StaticResource NoHighlightButton}" Background="#824D53" Foreground="#FDE5D3" BorderBrush="#694244"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки пагинации -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
            <Button Content="Пред." Click="PrevPage_Click" Margin="4" Style="{StaticResource NiceRoundedButton}"/>
            <TextBlock x:Name="PageInfoText" VerticalAlignment="Center" Margin="8"/>
            <Button Content="След." Click="NextPage_Click" Margin="4" Style="{StaticResource NiceRoundedButton}"/>
        </StackPanel>
    </Grid>
</Page>
