<Page x:Class="LibraryProject.View.Pages.BookDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BookDetailsPage"
      >
    <Grid Background="#FDE5D3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <!-- Растягивающаяся колонка для разделителя -->
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <!-- Для информационного блока -->
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Назад" Click="Button_Click" Width="100" 
            Background="Gray" Style="{StaticResource NiceRoundedButton}"/>

            <TextBlock Grid.Column="1" x:Name="BookTitleText" FontSize="18" FontWeight="Bold" 
               VerticalAlignment="Center" Margin="10,0,0,0"/>

            <Button Grid.Column="2" x:Name="EditBtn" Content="Редактировать" 
            Click="EditBook_Click" Margin="10,10" Width="150" 
            Style="{StaticResource SquareButtonStyle}"/>

            <Button Grid.Column="3" x:Name="DeleteBtn" Content="Удалить" 
            Click="DeleteBook_Click" Margin="10,10" Width="150" 
            Style="{StaticResource SquareButtonStyle}"/>

            <Button Grid.Column="4" x:Name="AddBtn" Content="Добавить копию" Width="150"
            Click="AddCopy_Click" Style="{StaticResource SquareButtonStyle}"/>

            <!-- Информационный блок прижат к правому краю -->
            <Grid Grid.Column="6" Margin="10,0,0,0" HorizontalAlignment="Right">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="titleBook" FontSize="22" Grid.Row="0" Foreground="#FF694244" Style="{StaticResource BaseText}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="authorsBook" FontSize="16" Grid.Row="1" Foreground="#FF694244" Style="{StaticResource BaseText}"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="genresBook" FontSize="16" Grid.Row="2" Foreground="#FF694244" Style="{StaticResource BaseText}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Grid>

        <!-- DataGrid с экземплярами -->
        <DataGrid x:Name="CopiesDataGrid"
                  Grid.Row="1"  Background="#FDE5D3"
                  AutoGenerateColumns="False"
                  IsReadOnly="True" Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Год изд." Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Год изд." Binding="{Binding YearPublish}" Width="80"/>
                <DataGridTextColumn Header="Издательство" Binding="{Binding Publisher}" Width="150"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="100"/>
                <DataGridTextColumn Header="Раздел" Binding="{Binding Section}" Width="100"/>
                <DataGridTextColumn Header="Шкаф" Binding="{Binding Closet}" Width="80"/>
                <DataGridTextColumn Header="Полка" Binding="{Binding Shelf}" Width="80"/>
                <DataGridTextColumn Header="Место" Binding="{Binding Place}" Width="80"/>
                <!-- Кнопка бронирования для читателя -->
                <DataGridTemplateColumn x:Name="Reserve" Header="Бронировать">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Забронировать" FontSize="12" Click="ReserveBook_Click" Width="100" Height="30" Style="{StaticResource SquareButtonStyle}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            
        </DataGrid>

        <!-- Панель пагинации -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
            <Button Content="Пред." Style="{StaticResource NiceRoundedButton}" Click="PrevPage_Click" Margin="4"/>
            <TextBlock x:Name="PageInfoText"  VerticalAlignment="Center" Margin="8"/>
            <Button Content="След." Click="NextPage_Click" Margin="4" Style="{StaticResource NiceRoundedButton}"/>
        </StackPanel>
    </Grid>
</Page>
