<Page x:Class="LibraryProject.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/View/Pages/аунтификация.png"/>
        </Grid.Background>
        <Border Margin="20" BorderBrush="#73937E" BorderThickness="2"  Background="#FDE5D3" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="10">
            <StackPanel  Margin="20">
                <TextBlock  Style="{StaticResource HText}"  Text="Вход" TextAlignment="Center"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Email"/>
                <TextBox x:Name="EmailTextBox" Style="{StaticResource FlatTextBoxStyle}"/>

                <TextBlock Style="{StaticResource BaseText}" Text="Пароль"/>
                <PasswordBox x:Name="PasswordBox" Margin="0 0 0 5" Style="{StaticResource FlatPasswordBoxStyle}" Background="#FDE5D3" Foreground="#824D53" BorderBrush="#824D53"/>

                <Button Content="Войти" Click="LoginButton_Click" Style="{StaticResource NiceRoundedButton}" Margin="0 10 0 0"/>
                <Button Content="Регистрация" Click="RegisterButton_Click" Margin="10"  Style="{StaticResource NoHighlightButton}" Foreground="#FF694244" FontFamily="Book Antiqua" BorderBrush="#00707070"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
