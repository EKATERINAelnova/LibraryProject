<Page x:Class="LibraryProject.View.Pages.LoansPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryProject.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoansPage">

    <Grid Margin="10" Background="#FDE5D3">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="0,0,0,-105" Grid.RowSpan="2">

            <!-- Верхняя панель с фильтром и кнопкой назад -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Фильтр по статусу:"  VerticalAlignment="Center"/>
                <ComboBox x:Name="StatusFilter" Width="120" Margin="5,0,400,0"
                          SelectionChanged="StatusFilter_SelectionChanged"/>
                <Button Content="Назад" Margin="10,0,0,0" Width="100" Click="BackButton_Click" Background="Gray" Style="{StaticResource NiceRoundedButton}"/>
            </StackPanel>

            <!-- Таблица выдач -->
            <DataGrid x:Name="LoansGrid" AutoGenerateColumns="False" Background="#FDE5D3" Height="400" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                      Style="{StaticResource ModernDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Книга" Binding="{Binding BookTitle}" Width="*"/>
                    <DataGridTextColumn Header="Авторы" Binding="{Binding Authors}" Width="*"/>
                    <DataGridTextColumn Header="Читатель" Binding="{Binding Login}" Width="*"/>
                    <DataGridTextColumn Header="Дата выдачи" Binding="{Binding LoanDate, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Дата возврата" Binding="{Binding DueDate, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Когда вернули" Binding="{Binding ReturnDate, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Отметить возврат" Margin="0,10,0,0" Width="150" HorizontalAlignment="Left"
            Click="ReturnButton_Click" Style="{StaticResource NiceRoundedButton}"/>
                <Button Content="Отчет" Margin="0,10,0,0" Width="150" HorizontalAlignment="Right" Click="DocsButton_Click" Style="{StaticResource NiceRoundedButton}"/>
            </StackPanel>
            <!-- Кнопка возврата для выбранной книги -->
            
        </StackPanel>
    </Grid>
</Page>
