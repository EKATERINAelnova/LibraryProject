<Page x:Class="LibraryProject.View.Pages.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="BooksPage">
    <Page.Background>
        <ImageBrush ImageSource="/View/Pages/аунтификация.png"/>
    </Page.Background>
    <Grid>
        <Border Margin="20" BorderBrush="#73937E" BorderThickness="2" Background="#FDE5D3" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя панель с кнопками и кнопкой выхода -->
                <Grid Grid.Row="0" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <!-- Левые кнопки -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Центральное пространство -->
                        <ColumnDefinition Width="*"/>
                        <!-- Кнопка "Мои книги" (если нужно по центру) -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Правое пространство -->
                        <ColumnDefinition Width="*"/>
                        <!-- Кнопка выхода и информация пользователя -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левые кнопки -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="MyLoans" Content="Выдачи"
                                Click="MyLoans_Click" Width="150"
                                Margin="10,0,10,0" Style="{StaticResource SquareButtonStyle}"/>

                        <Button x:Name="AllRequests" Content="Все запросы"
                                Click="AllRequsts_Click" Width="150"
                                Margin="0,0,10,0" Style="{StaticResource SquareButtonStyle}"/>
                    </StackPanel>

                    <!-- Кнопка "Мои книги"-->
                    <Button Grid.Column="0" 
                            x:Name="MyBooks" 
                            Content="Мои книги" 
                            Click="MyButton_Click"  
                            Width="150" 
                            Margin="10"
                            Style="{StaticResource SquareButtonStyle}"
                            HorizontalAlignment="Left"/>

                    <!-- Кнопка выхода справа -->
                    <StackPanel Grid.Column="4" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0">
                        <TextBlock Style="{StaticResource BaseText}" 
                                   x:Name="name" 
                                   Margin="0,0,10,0" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Style="{StaticResource BaseText}" 
                                   x:Name="role" 
                                   Margin="0,0,20,0" 
                                   VerticalAlignment="Center"/>

                        <Button Content="Выйти"
                                Width="100"
                                Background="Tomato"
                                Style="{StaticResource NiceRoundedButton}"
                                Click="BtnLogout_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Остальная часть страницы остается без изменений -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="SearchBox" Width="250" Margin="10,0,10,0" Style="{StaticResource FlatTextBoxStyle}"/>
                    <Button Content="Найти" Click="SearchButton_Click" 
                            Margin="0,0,10,0" Style="{StaticResource SquareButtonStyle}"/>

                    <Button Content="Сброс" Click="ResetButton_Click"
                            Margin="0,0,20,0" Style="{StaticResource SquareButtonStyle}"/>

                    <Button x:Name="UserBtn" Margin="0,0,10,0" Content="Пользователи" Click="Users_Click" Width="150" Style="{StaticResource SquareButtonStyle}"/>
                </StackPanel>

                <DataGrid x:Name="BooksDataGrid"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          MouseDoubleClick="BooksDataGrid_MouseDoubleClick"
                          Style="{StaticResource ModernDataGridStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Авторы" Binding="{Binding Authors}" Width="200"/>
                        <DataGridTextColumn Header="Жанры" Binding="{Binding Genres}" Width="150"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Count}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">
                    <Button Content="Пред."
                            Click="PrevPage_Click"
                            Margin="6"
                            Style="{StaticResource NiceRoundedButton}"/>

                    <TextBlock x:Name="PageInfoText"
                               VerticalAlignment="Center"
                               Margin="10"/>

                    <Button Content="След."
                            Click="NextPage_Click"
                            Margin="6"
                            Style="{StaticResource NiceRoundedButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>