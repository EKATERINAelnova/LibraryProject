<Page x:Class="LibraryProject.View.Pages.MyReservedPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryProject.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyReservedPage">

    <Grid Background="#FDE5D3">

        <StackPanel>

            <TextBlock Text="Мои бронирования"
                       FontSize="24"
                       Foreground="#FF694244"
                       Margin="15" Style="{StaticResource BaseText}"/>
            <Button Content="На главную"
                Margin="0 0 0 15"
                Width="120"
                Click="Back_Click" Style="{StaticResource NiceRoundedButton}"/>
            <DataGrid x:Name="RequestsGrid" Background="#FDE5D3"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Height="400" Style="{StaticResource ModernDataGridStyle}">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Срок (дни)" Binding="{Binding Days_Left}" Width="80"/>
                    <DataGridTextColumn Header="Книга" Binding="{Binding Book_Title}" Width="*"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="150"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Request_Date}" Width="150"/>
                    <DataGridTextColumn Header="Когда забрать.." Binding="{Binding Delete_Date}" Width="150"/>
                    <DataGridTemplateColumn  x:Name="Reserve"  Header="Отмена">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Отмена" Background="#824D53" Foreground="#FDE5D3"
                                    Click="DeleteReserve_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>

            
        </StackPanel>

    </Grid>

</Page>
